digraph G {
    subgraph cluster_0 {
        label="360 Degree CRM Solution"
        CustomerSearch [label="Search Customer"]
        RetrieveCustomerData [label="Retrieve Customer Data"]
        ConsolidateData [label="Consolidate Customer Data"]
        DisplayCustomerProfile [label="Display Unified Customer Profile"]
    }

    BankEmployee [label="Bank Employee"]

    BankEmployee -> CustomerSearch [label="Initiates Search"]
    CustomerSearch -> RetrieveCustomerData [label="Requests Data"]
    RetrieveCustomerData -> ConsolidateData [label="Provides Raw Data"]
    ConsolidateData -> DisplayCustomerProfile [label="Provides Consolidated Data"]
    DisplayCustomerProfile -> BankEmployee [label="Views Profile"]
}
