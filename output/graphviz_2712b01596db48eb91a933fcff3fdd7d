digraph G {
    BankEmployee [label="Bank Employee"]
    ViewCustomerProfile [label="View Customer Profile"]
    IdentifyOpportunities [label="Identify Cross Sell Up Sell Opportunities"]
    PresentOffer [label="Present Offer To Customer"]
    RecordInteraction [label="Record Interaction Outcome"]
    System360CRM [label="System 360 CRM"]

    BankEmployee -> ViewCustomerProfile [label="Views Profile"]
    ViewCustomerProfile -> IdentifyOpportunities [label="Displays Opportunities"]
    IdentifyOpportunities -> System360CRM [label="System Suggests"]
    BankEmployee -> PresentOffer [label="Takes Action"]
    PresentOffer -> RecordInteraction [label="Logs Outcome"]
    RecordInteraction -> System360CRM [label="Updates Record"]
}
