digraph G {
    start [label="Start"]
    DataCollection [label="Data Collection From Multiple Banking Systems"]
    DataConsolidation [label="Data Consolidation Into Unified Profile"]
    ProfileGeneration [label="360 CRM Profile Generation"]
    EmployeeAccess [label="Employee Accesses Profile"]
    InformationDisplay [label="Information Displayed To Employee"]
    CustomerInteraction [label="Customer Interaction Via Personalized Service"]
    OpportunityIdentification [label="Opportunity Identification Cross Sell Up Sell"]
    IssueTrackingUpdate [label="Issue Tracking And Status Update"]
    DecisionMaking [label="Decision Making And Action"]
    FeedbackLoop [label="Feedback Loop And Continuous Improvement"]
    end [label="End"]

    start -> DataCollection
    DataCollection -> DataConsolidation
    DataConsolidation -> ProfileGeneration
    ProfileGeneration -> EmployeeAccess
    EmployeeAccess -> InformationDisplay
    InformationDisplay -> CustomerInteraction
    InformationDisplay -> OpportunityIdentification
    InformationDisplay -> IssueTrackingUpdate
    CustomerInteraction -> DecisionMaking
    OpportunityIdentification -> DecisionMaking
    IssueTrackingUpdate -> DecisionMaking
    DecisionMaking -> FeedbackLoop
    FeedbackLoop -> DataCollection
    DecisionMaking -> end
}
