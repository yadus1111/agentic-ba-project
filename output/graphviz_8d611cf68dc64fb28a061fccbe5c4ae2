digraph G {
    BankEmployee [label="Bank Employee"]
    LogNewIssue [label="Log New Issue"]
    ViewIssueStatus [label="View Issue Status"]
    UpdateIssueDetails [label="Update Issue Details"]
    ResolveIssue [label="Resolve Issue"]
    System360CRM [label="System 360 CRM"]

    BankEmployee -> LogNewIssue [label="Creates"]
    LogNewIssue -> System360CRM [label="Records Issue"]
    BankEmployee -> ViewIssueStatus [label="Monitors"]
    ViewIssueStatus -> System360CRM [label="Retrieves Status"]
    BankEmployee -> UpdateIssueDetails [label="Modifies"]
    UpdateIssueDetails -> System360CRM [label="Updates Record"]
    BankEmployee -> ResolveIssue [label="Closes Issue"]
    ResolveIssue -> System360CRM [label="Marks As Resolved"]
}
