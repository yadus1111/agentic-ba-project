digraph G {
    RelationshipManager [label="Relationship Manager"]
    ViewCustomerProfile [label="View Customer Profile"]
    IdentifyOpportunities [label="Identify Cross-Sell Up-Sell Opportunities"]
    PresentOpportunities [label="Present Opportunities"]
    UpdateOpportunityStatus [label="Update Opportunity Status"]
    CRMSystem [label="360 CRM System"]

    RelationshipManager -> ViewCustomerProfile
    ViewCustomerProfile -> CRMSystem [label="Request Profile"]
    CRMSystem -> IdentifyOpportunities [label="Auto Identify"]
    IdentifyOpportunities -> PresentOpportunities
    PresentOpportunities -> RelationshipManager [label="Display Suggestions"]
    RelationshipManager -> UpdateOpportunityStatus
    UpdateOpportunityStatus -> CRMSystem [label="Update Status"]
}
