digraph G {
    Actor [label="Bank Employee"]
    ViewCustomerProfile [label="View Customer Profile"]
    LogNewIssue [label="Log New Customer Issue"]
    ViewIssueHistory [label="View Issue History"]
    UpdateIssueStatus [label="Update Issue Status"]
    IssueDatabase [label="Issue Database"]
    CustomerProfileData [label="Customer Profile Data"]

    Actor -> ViewCustomerProfile
    ViewCustomerProfile -> CustomerProfileData [label="Uses"]
    ViewCustomerProfile -> LogNewIssue
    LogNewIssue -> IssueDatabase [label="Stores"]
    LogNewIssue -> ViewIssueHistory [label="Refreshes"]
    ViewCustomerProfile -> ViewIssueHistory
    ViewIssueHistory -> IssueDatabase [label="Retrieves From"]
    ViewIssueHistory -> Actor
    Actor -> UpdateIssueStatus
    UpdateIssueStatus -> IssueDatabase [label="Updates"]
    UpdateIssueStatus -> ViewIssueHistory [label="Refreshes"]
}
