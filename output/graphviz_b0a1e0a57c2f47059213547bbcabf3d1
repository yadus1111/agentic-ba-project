digraph G {
    Actor [label="Bank Employee"]
    UC3 [label="Track Customer Issues"]
    Step1 [label="Access Customer Profile"]
    Step2 [label="Create New Issue"]
    Step3 [label="Enter Issue Details"]
    Step4 [label="Assign Update Status"]
    Step5 [label="View Issue History"]
    DB [label="CRM Database"]

    Actor -> Step1
    Step1 -> Step2
    Step2 -> Step3
    Step3 -> DB [label="Save Issue"]
    DB -> Step5 [label="Provide Issue Data"]
    Step4 -> DB [label="Update Issue Status"]
    Step5 -> Actor
    Step2 -> Step4 [label="For Existing Issue"]
    Actor -> UC3
    UC3 -> Step1
}
