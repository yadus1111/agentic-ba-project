digraph G {
    BankEmployee [label="Bank Employee"]
    ViewCustomerProfile [label="View Customer Profile"]
    ViewIssues [label="View Customer Issues"]
    LogNewIssue [label="Log New Issue"]
    UpdateIssueStatus [label="Update Issue Status"]
    CRMSystem [label="360 CRM System"]

    BankEmployee -> ViewCustomerProfile
    ViewCustomerProfile -> CRMSystem [label="Retrieve Profile"]
    CRMSystem -> ViewIssues [label="Display Issue List"]
    BankEmployee -> ViewIssues
    BankEmployee -> LogNewIssue
    LogNewIssue -> CRMSystem [label="Save Issue"]
    BankEmployee -> UpdateIssueStatus
    UpdateIssueStatus -> CRMSystem [label="Update Record"]
}
